{
  "name": "uniforms-bootstrap4",
  "version": "1.1.2",
  "main": "lib/index.js",
  "jsnext:main": "src/index.js",
  "description": "Bootstrap4 UI components for uniforms.",
  "repository": "https://github.com/vazco/uniforms/tree/master/packages/uniforms-bootstrap4",
  "homepage": "https://github.com/vazco/uniforms/",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vazco/uniforms/issues"
  },
  "keyword": [
    "form",
    "forms",
    "meteor",
    "react",
    "react-component",
    "schema",
    "validation"
  ],
  "files": [
    "lib/",
    "src/"
  ],
  "scripts": {
    "build": "babel --compact --out-dir lib src",
    "clean": "rimraf coverage lib .nyc_output",
    "cover": "cross-env NODE_ENV=cover nyc npm test",
    "lint": "eslint src test",
    "prepublish": "npm run build",
    "pretest": "npm run lint",
    "reset": "rimraf node_modules",
    "test": "babel-node node_modules/.bin/_mocha --require test/index.js --recursive test --reporter list"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-istanbul": "^2.0.2",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "chai": "^3.5.0",
    "cross-env": "^3.0.0",
    "enzyme": "^2.4.1",
    "eslint": "^3.7.0",
    "eslint-config-vazco": "2.1.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-react": "^6.3.0",
    "eslint-plugin-vazco": "^1.0.0",
    "jsdom": "^9.6.0",
    "mocha": "^3.1.0",
    "mock-require": "^1.3.0",
    "nyc": "^8.3.0",
    "react": "^15.3.2",
    "react-addons-test-utils": "^15.3.2",
    "react-dom": "^15.3.2",
    "rimraf": "^2.5.4",
    "sinon": "^2.0.0-pre.3"
  },
  "peerDependencies": {
    "react": "^15.3.2",
    "uniforms": "^1.1.2"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ],
    "env": {
      "cover": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "vazco"
    ],
    "env": {
      "mocha": true
    }
  },
  "nyc": {
    "reporter": [
      "html"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "invariant": "^2.2.1"
  }
}
